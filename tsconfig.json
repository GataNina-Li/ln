{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./source",
    "noEmitOnError": true
  },
  "include": [
    "source/index.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
